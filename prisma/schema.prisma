generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Cliente {
  id            String   @id @default(cuid())
  name          String
  email         String?  @unique
  phone         String?
  taxId         String?  // CIF/NIF
  address       String?
  contactPerson String?
  status        String   @default("ACTIVE") // ACTIVE, RISK, PAUSED, CHURNED
  responsibleId String?
  lastActivity  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  credentials   Credential[]
  proyectos     Proyecto[]
  usuariosAsignados ClienteUsuario[]

  @@map("clientes")
}

model Credential {
  id                String   @id @default(cuid())
  clienteId         String
  
  // Categorización
  category          String   // SOCIAL, WEB_CMS, EMAIL, HOSTING, ANALYTICS, ADS, OTHER
  platform          String   // Facebook, Instagram, WordPress, Gmail, GoDaddy, etc.
  
  // Datos de acceso
  url               String?  // URL de acceso directo
  username          String
  passwordEncrypted String
  email             String?  // Email asociado (para recuperación)
  
  // Para cuentas de email - permite agrupar múltiples cuentas
  isEmailAccount    Boolean  @default(false)
  emailProvider     String?  // Gmail, Outlook, cPanel, etc.
  parentId          String?  // Para agrupar emails bajo un dominio
  
  // Información adicional
  notes             String?
  isActive          Boolean  @default(true)
  
  // Auditoría completa
  createdById       String?
  createdByName     String?
  createdAt         DateTime @default(now())
  
  // Historial de modificaciones
  lastModifiedById  String?
  lastModifiedByName String?
  updatedAt         DateTime @updatedAt
  
  // Relaciones
  cliente           Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("credentials")
}

model Usuario {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String   @default("USER") // ADMIN, MANAGER, USER
  position  String?
  phone     String?
  avatarUrl String?
  hourlyCost Float?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  tareasAsignadas  Tarea[]  @relation("TareaAssignee")
  clientesAsignados ClienteUsuario[]
  ticketsSent      Ticket[] @relation("TicketSender")
  ticketsReceived  Ticket[] @relation("TicketRecipient")

  @@map("usuarios")
}

model ClienteUsuario {
  id        String   @id @default(cuid())
  clienteId String
  usuarioId String
  role      String   @default("MEMBER") // LEAD, MEMBER
  createdAt DateTime @default(now())

  cliente   Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  usuario   Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@unique([clienteId, usuarioId])
  @@map("clientes_usuarios")
}

model Proyecto {
  id        String   @id @default(cuid())
  title     String
  clienteId String?
  status    String   @default("ACTIVE") // ACTIVE, BLOCKED, PENDING, COMPLETED
  budget    Float?
  deadline  String?
  isArchived Boolean @default(false)
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cliente   Cliente? @relation(fields: [clienteId], references: [id], onDelete: SetNull)
  tareas    Tarea[]

  @@map("proyectos")
}

model Tarea {
  id             String   @id @default(cuid())
  title          String
  description    String?
  status         String   @default("PENDING")
  priority       String   @default("MEDIUM")
  type           String   @default("OPERATIONAL")
  proyectoId     String
  assigneeId     String?
  estimatedHours Float?
  dueDate        DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  proyecto       Proyecto @relation(fields: [proyectoId], references: [id], onDelete: Cascade)
  assignee       Usuario? @relation("TareaAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  timeEntries    TimeEntry[]

  @@map("tareas")
}

model TimeEntry {
  id          String    @id @default(cuid())
  userId      String
  tareaId     String
  startTime   DateTime
  endTime     DateTime?
  description String?
  createdAt   DateTime  @default(now())

  tarea       Tarea     @relation(fields: [tareaId], references: [id], onDelete: Cascade)

  @@map("time_entries")
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  message     String?
  priority    String   @default("MEDIUM")
  status      String   @default("OPEN")
  senderId    String
  recipientId String?  // null = para todo el equipo
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sender      Usuario  @relation("TicketSender", fields: [senderId], references: [id], onDelete: Cascade)
  recipient   Usuario? @relation("TicketRecipient", fields: [recipientId], references: [id], onDelete: SetNull)

  @@map("tickets")
}